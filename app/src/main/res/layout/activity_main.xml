<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lavender.wifilocation.MainActivity">


    <Button
        android:text="发送请求"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="27dp"
        android:id="@+id/button" />

    <Button
        android:text="搜索wifi信号强度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/btnStartWifi"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:text="停止搜索"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStopWifi"
        android:layout_alignBaseline="@+id/btnStartWifi"
        android:layout_alignBottom="@+id/btnStartWifi"
        android:layout_toEndOf="@+id/btnStartWifi"
        android:layout_marginStart="72dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView"
        android:layout_below="@+id/btnStartWifi"
        android:layout_alignStart="@+id/btnStartWifi"
        android:layout_alignEnd="@+id/btnStopWifi" />
</RelativeLayout>
